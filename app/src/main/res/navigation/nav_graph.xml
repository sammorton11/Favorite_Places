<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/placeListFragment">

    <fragment
        android:id="@+id/placeListFragment"
        android:name="com.samm.imagesaver.PlaceListFragment"
        android:label="fragment_place_list"
        tools:layout="@layout/fragment_place_list" >
        <action
            android:id="@+id/action_placeListFragment_to_newPlaceFragment2"
            app:destination="@id/newPlaceFragment" />
        <action
            android:id="@+id/action_placeListFragment_to_placeDetailsFragment"
            app:destination="@id/placeDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/newPlaceFragment"
        android:name="com.samm.imagesaver.NewPlaceFragment"
        android:label="fragment_new_place"
        tools:layout="@layout/fragment_new_place" />
    <fragment
        android:id="@+id/placeDetailsFragment"
        android:name="com.samm.imagesaver.PlaceDetailsFragment"
        android:label="fragment_place_details"
        tools:layout="@layout/fragment_place_details" />
</navigation>